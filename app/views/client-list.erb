<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
  <h1 class="h2">Clients</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group mr-2">
      <button class="btn btn-sm btn-outline-secondary">Share</button>
      <button class="btn btn-sm btn-outline-secondary">Export</button>
    </div>
    <button class="btn btn-sm btn-outline-secondary dropdown-toggle">
      <span data-feather="calendar"></span>
      Recent
    </button>
  </div>
</div>

<script type="text/javascript">
    var topics = <%= @topics.to_json %>;
</script>
<div id="clientList" class="table-responsive">
  <table class="table table-sm">
    <thead>
      <tr>
        <th><a href onclick="loadClients('id'); return false;">#</a></th>
        <th><a href onclick="loadClients('firstname'); return false;">First</a></th>
        <th><a href onclick="loadClients('lastname'); return false;">Last</a></th>
        <th><a href onclick="loadClients('contactname'); return false;">Contact</a></th>
        <th><a href onclick="loadClients('timezone'); return false;">Timezone</a></th>
        <th><a href onclick="loadClients('solicited'); return false;">Solicited</a></th>
        <th><a href onclick="loadClients('numappts'); return false;"># Appointments</a></th>
        <th><a href onclick="loadClients('lastapptdate'); return false;">Last Appointment</a></th>
      </tr>
    </thead>
    <tbody>
      <% @clients.each do |customer| %>
      <tr>
        <td><%= customer['id'] %></a></td>
        <td><a href onclick="loadClientData(<%= customer['id'] %>); return false;"><%= customer['firstname'] %></a></td>
        <td><%= customer['lastname'] %></a></td>
        <td><%= customer['contactname'] %></a></td>
        <td><%= customer['timezone'] %></a></td>
        <td><input type="checkbox" disabled="true" <%= customer['solicited'] ? "CHECKED" : "" %> /></a></td>
        <td><a href onclick="loadAppointments(<%= customer['id'] %>); return false;"><%= customer['numappts'] %></a></td>
        <td><%= customer['lastapptdate'] %></a></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
