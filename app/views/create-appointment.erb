<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
  <h1 class="h2">New Appointment</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group mr-2">
      <button class="btn btn-sm btn-outline-secondary">Share</button>
      <button class="btn btn-sm btn-outline-secondary">Export</button>
    </div>
    <button class="btn btn-sm btn-outline-secondary dropdown-toggle">
      <span data-feather="calendar"></span>
      Recent
    </button>
  </div>
</div>

<div id="createAppointment" class="table-responsive">
  <form name="appointmentDetail">
    <table id="appointmentDetailTable" class="table table-striped table-sm">
      <tbody>
        <tr>
          <td style="align=right;">Client:</td>
          <td style="align:left;">
            <select name="client_id">
              <% @clients.each do |client| %>
                <option value="<%= client.id %>" <%= client.id == 0 ? "SELECTED" : "" %>><%= client.firstname %> <%= client.lastname %></option>
              <% end %>
            </select>
          </td>
        </tr>
        <tr>
          <td style="align=right;">Topic:</td>
          <td style="align:left;">
            <select name="topic_id">
              <% @topics.each do |topic| %>
                <option value="<%= topic.id %>" <%= topic.id == 2 ? "SELECTED" : "" %>><%= topic.name %></option>
              <% end %>
            </select>
          </td>
        </tr>
        <tr>
          <td style="align=right;">Start time:</td>
          <td style="align:left;"><input type="datetime-local" name="starttime" value="<%= @formData['nextHour'] %>" /></td>
        </tr>
        <tr>
          <td style="align=right;">Duration:</td>
          <td style="align:left;"><input type="number" name="duration" min="10" max="600" size="5" value="<%= @formData['duration'] %>" /></td>
        </tr>
        <tr>
          <td style="align=right;">Hourly Rate:</td>
          <td style="align:left;"><input type="number" name="rate" min="10" max="600" size="5" value="<%= @formData['rate'] %>" /></td>
        </tr>
        <tr>
          <td style="align=right;">Billing %:</td>
          <td style="align:left;"><input type="number" name="billingpct"  min="0.75" max="1.00" step="0.05" size="5" value="<%= @formData['billingpct'] %>" /></td>
        </tr>
        <tr>
          <td style="align=right;">Description:</td>
          <td style="align:left;"><textarea name="description" cols="80" rows="5"></textarea></td>
        </tr>
        <tr>
          <td style="align=right;">&nbsp;</td>
          <td style="align:left;"><input type="button" value="Save" onclick="saveAppointment()" /></td>
        </tr>
      </tbody>
    </table>
  </form>
</div>
